void carryon() {
  int carrybox = MessageBox(hWnd,"Is it morning now?", "Notice Me Senpai", MB_YESNO);

  switch(carrybox){
  case IDYES:
  morning();
  break;
  case IDNO:
  night();
  break;
  default:
  morning();
  break;
  }
}

